---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true}))
const pageTitle = "Blog Page"
---

<BaseLayout pageTitle={pageTitle} style="font-family: 'Courier New', Courier, monospace;">
        <h2>In this blog, I will write about my learning journey</h2>
        <p> Also, new coffee content will be here</p>
        <ul>
            {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
        </ul>
    </BaseLayout>