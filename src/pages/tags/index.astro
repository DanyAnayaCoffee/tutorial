---
// Import the BaseLayout component to use the BaseLayout component and style the page
import  BaseLayout from "../../layouts/BaseLayout.astro";
// Get all posts from the posts directory having the .md extension
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }))
// Get all tags from the posts
const tags = [... new Set(allPosts.flatMap((post: any) => post.frontmatter.tags))]
// Name of the page
const pageTitle = "Tag Index";
---
<BaseLayout pageTitle={pageTitle}>
    <div class="tags">
        {tags.map((tag) => 
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a>
        </p>)}
    </div>
</BaseLayout>

<style>
    i Style the links aparience */
      a {
    color: #00539F;
  }
  /* Style the tags div */
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
  /* Style the tags */
  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>